    <script>

const faqItems = document.querySelectorAll(".faq-item");

faqItems.forEach(item => {
  item.addEventListener("click", () => {
    const p = item.querySelector("p");
    const icon = item.querySelector(".toggle-icon");

    if (p.classList.contains("hidden")) {
      p.classList.remove("hidden");
      setTimeout(() => {
        p.classList.add("opacity-100");
        p.classList.remove("opacity-0");
      }, 10);
      icon.textContent = "−";
    } else {
      p.classList.add("opacity-0");
      setTimeout(() => {
        p.classList.add("hidden");
        p.classList.remove("opacity-100");
      }, 300);
      icon.textContent = "+";
    }
  });
});


        
const targetDate = new Date("2025-05-12T11:00:00");

function updateCountdown() {
  const now = new Date();
  let totalSeconds = Math.floor((targetDate - now) / 1000);

  if (totalSeconds < 0) {
    document.getElementById("countdown").textContent = ">> BAŞLADI!";
    clearInterval(timer);
    return;
  }

  const days = Math.floor(totalSeconds / 86400);
  totalSeconds %= 86400;

  const hours = Math.floor(totalSeconds / 3600);
  totalSeconds %= 3600;

  const minutes = Math.floor(totalSeconds / 60);
  const seconds = totalSeconds % 60;

  document.getElementById("countdown").textContent =
    `${days} gün ${hours} saat ${minutes} dakika ${seconds} saniye <`;
}

const timer = setInterval(updateCountdown, 1000);
updateCountdown();


        const menuToggle = document.getElementById('menu-toggle');
